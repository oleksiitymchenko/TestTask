@model TestTask.ViewModels.LoginModel
 
<h2>Sign in</h2>
 
<a asp-action="Register" asp-controller="Account">Registration</a>
 
<form asp-action="Login" asp-controller="Account" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ValidationSummary.ModelOnly"></div>
    <div>
        <div class="form-group">
            <label asp-for="Email">Input Email</label>
            <input type="text" asp-for="Email" />
            <span asp-validation-for="Email" />
        </div>
        <div class="form-group">
            <label asp-for="Password">Input Password</label>
            <input asp-for="Password" />
            <span asp-validation-for="Password" />
        </div>
        <div class="form-group">
            <input type="submit" value="Login" class="btn" />
        </div>
    </div>
</form>